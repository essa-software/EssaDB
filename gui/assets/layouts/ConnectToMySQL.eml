@Container {
    layout: @VerticalBoxLayout {
        padding: [0, 0, 10, 0]
        spacing: 10
    }

    define ValueField : @Container {
        layout: @HorizontalBoxLayout {
            spacing: 10
        }
    }

    @ValueField {
        @Textfield {
            content: "Address:"
            width: 120px
        }
        @TextEditor address {
            multiline: false
        }
        @Textfield {
            content: "Port:"
            width: 120px
        }
        @TextEditor port {
            multiline: false
            type: "number"
        }
    }
    @ValueField {
        @Textfield {
            content: "Username:"
            width: 120px
        }
        @TextEditor username {
            multiline: false
        }
        @Textfield {
            content: "Password:"
            width: 120px
        }
        @TextEditor password {
            multiline: false
        }
    }
    @ValueField {
        @Textfield {
            content: "Database name:"
            width: 235px
        }
        @TextEditor database {
            multiline: false
        }
    }
}
